<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <TextView
            android:id="@+id/FileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="67dp"
            android:layout_toLeftOf="@+id/btnBrowse"
            android:hint="File name"
            android:paddingRight="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btnBrowse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/FileName"
            android:layout_alignBottom="@+id/FileName"
            android:layout_alignParentRight="true"
            android:text="Browse" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnBrowse"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/button1"
            android:text="Exit" />

        <Button
            android:id="@+id/loadP12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnSign"
            android:layout_alignBottom="@+id/btnSign"
            android:layout_toRightOf="@+id/btnSign"
            android:text="loadP12" />

        <Button
            android:id="@+id/btnSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnExit"
            android:layout_alignBottom="@+id/btnExit"
            android:layout_toRightOf="@+id/btnExit"
            android:text="Sign" />

</RelativeLayout>
